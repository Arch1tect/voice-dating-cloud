rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId}/{document=**} {
      allow read: if true;
      allow write: if true;
     }
    match /users/{userId}/contacts/{contactId}/{document=**} {
      allow read: if true;
      allow write: if true;
     }
     match /users/{userId}/contacts/{contactId}/messages/{document=**} {
      allow read: if true;
      allow write: if request.auth.uid == userId ||  request.auth.uid == contactId;
    }

  }
}